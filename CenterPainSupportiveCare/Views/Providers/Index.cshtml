@model IEnumerable<CenterPainSupportiveCareModels.Provider>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProviderName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProviderName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProviderId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ProviderId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ProviderId })
        </td>
    </tr>
}

</table>
